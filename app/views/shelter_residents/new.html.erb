<form action="/shelters/<%= @shelter.id %>/new" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
<h1>Enter a new associated resident record:</h1>
<p>Family Name</p>
<input type='text' name='family_name'/><br/>
<p>Long Term Housing Needed?</p>
<input type='text' name='long_term_housing_need'/><br/>
<p>Family Size</p>
<input type='number' name='family_size'/><br/>
<input type="hidden" name="shelter_id" value="<%= @shelter.id %>">
<input type='submit'/>

</form>

